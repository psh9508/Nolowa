<UserControl x:Class="NolowaFrontend.Controls.WatermarkMoveUpsideInputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NolowaFrontend.Controls"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="150"
             Name="_this">
    <StackPanel>
        <TextBlock Text="{Binding Title, FallbackValue=Title}"/>
        <TextBox Background="Transparent" BorderThickness="0" Text="{Binding Text}" FontSize="{Binding InputTextSize, FallbackValue=15}" d:Text="Design time value"/>
        <Line X1="0" X2="{Binding Path=Width, ElementName=_this}" Stroke="Black" StrokeThickness="1"/>
    </StackPanel>
</UserControl>
