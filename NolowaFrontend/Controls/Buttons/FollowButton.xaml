<UserControl x:Class="NolowaFrontend.Controls.Buttons.FollowButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NolowaFrontend.Controls.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ControlTemplate x:Key="ControlTemplate" TargetType="ToggleButton">
            <Grid Background="White">
                <Border CornerRadius="50" BorderThickness="1">
                    <ContentPresenter/>
                </Border>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    
    <ToggleButton>
        <ToggleButton.Style>
            <Style TargetType="ToggleButton">
                <Setter Property="Template" Value="{StaticResource ControlTemplate}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Checked}" Value="True">
                        
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ToggleButton.Style>
    </ToggleButton>
</UserControl>
