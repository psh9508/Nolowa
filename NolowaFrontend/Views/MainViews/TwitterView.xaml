<UserControl x:Class="NolowaFrontend.Views.MainViews.TwitterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NolowaFrontend.Views.MainViews"
             xmlns:uc="clr-namespace:NolowaFrontend.Views.UserControls"
             xmlns:designTime="clr-namespace:NolowaFrontend.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <UserControl.Resources>
        <designTime:TwitterViewDesignTimeVM x:Key="TwitterViewDesignTimeVM"/>
        <sys:Double x:Key="diameterOfTweitterButton">50</sys:Double>
    </UserControl.Resources>
    
    <Grid>
        <ListBox d:DataContext="{Binding Source={StaticResource TwitterViewDesignTimeVM}}"
                 ItemsSource="{Binding Posts}"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <uc:PostView/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Width="{StaticResource diameterOfTweitterButton}" Height="{StaticResource diameterOfTweitterButton}" Margin="0,0,20,20"
                VerticalAlignment="Bottom" HorizontalAlignment="Right" Command="{Binding TwitterCommand}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid >
                                    <Ellipse Width="{StaticResource diameterOfTweitterButton}" Height="{StaticResource diameterOfTweitterButton}" Fill="Aquamarine"/>
                                    <Image Source="/Resources/Icons/pencil.png" Margin="5"/>
                                    <ContentControl/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
